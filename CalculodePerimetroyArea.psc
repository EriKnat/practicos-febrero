Algoritmo CalculodePerimetroyArea
	Definir radio,numeropi Como Real
	Definir area,perimetro Como Real
	Escribir 'Ingrese el radio de su circunferencia'
	Escribir Solicitar,radio
	Leer radio
	numeropi <- 3.1416
	area <- numeropi*(radio*radio)
	perimetro <- numeropi*radio*2
	Escribir 'El perimetro es '
	Escribir perimetro
	Escribir 'El area es '
	Escribir area
FinAlgoritmo
